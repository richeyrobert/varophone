=render "layouts/phone_admin_sidebar"
%h1 Listing phone_numbers

%table.table-striped.table-hover.table-bordered.table-responsive
  %tr
    %th 
    %th Name
    %th Number
    %th Caller Identification
    %th

  - @phone_numbers.each do |phone_number|
    %tr
      %td= link_to "", edit_admin_phone_number_path(phone_number), class: "big-icon-phone"
      %td= link_to phone_number.name, edit_admin_phone_number_path(phone_number)
      %td= link_to phone_number.number, edit_admin_phone_number_path(phone_number)
      %td= link_to phone_number.caller_id, edit_admin_phone_number_path(phone_number)
      %td= link_to 'Destroy', admin_phone_number_path(phone_number), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Phone number', new_admin_phone_number_path
