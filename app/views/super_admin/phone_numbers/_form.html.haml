= form_for @phone_number do |f|
  - if @phone_number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone_number.errors.count, "error")} prohibited this phone_number from being saved:"
      %ul
        - @phone_number.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :caller_id
    = f.text_field :caller_id
  .field
    = f.label :block_caller_id
    = f.check_box :block_caller_id
  .field
    = f.label :phone_number_type
    = f.text_field :phone_number_type
  .field
    = f.label :call_endpoint
    = f.text_field :call_endpoint
  .field
    = f.label :hold_music_id
    = f.number_field :hold_music_id
  .field
    = f.label :call_recording_location
    = f.text_field :call_recording_location
  .actions
    = f.submit 'Save'
